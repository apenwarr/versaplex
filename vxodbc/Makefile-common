clean:
	rm -f *.o *.so *~ *.res *.dll *.a .*.d *.d .stamp-config
	$(MAKE) -C t $@

%.E: %.c
	$(CC) -o $@ -E $< $(CFLAGS)
	
%.E: %.cc
	$(CC) -o $@ -E $< $(CXXFLAGS)
	
%.o: %.c
	@echo Compiling $@...
	@$(CC) -o $@ -c -MMD -MP -MF .$*.d $< $(CFLAGS)

%.o: %.cc
	@echo Compiling $@...
	@$(CXX) -o $@ -c -MMD -MP -MF .$*.d $< $(CXXFLAGS)

include $(wildcard .*.d)
